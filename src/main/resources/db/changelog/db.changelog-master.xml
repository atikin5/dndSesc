<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="atikin" id="Create master table">
        <createTable tableName="master_seq">
            <column name="next_val" type="bigint(20)"/>
        </createTable>

        <insert tableName="master_seq">
            <column name="next_val">1</column>
        </insert>

        <createTable tableName="master">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(256)"/>
            <column name="pass" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="atikin" id="Create session table">
        <createTable tableName="session_seq">
            <column name="next_val" type="bigint(20)"/>
        </createTable>

        <insert tableName="session_seq">
            <column name="next_val">1</column>
        </insert>

        <createTable tableName="session">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(10)"/>
            <column name="master_id" type="bigint"/>
            <column name="state" type="varchar(255)"/>
            <column name="create_date" type="timestamp"/>
            <column name="start_date" type="timestamp"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="session" baseColumnNames="master_id"
                                 referencedTableName="master" referencedColumnNames="id"
                                 constraintName="session_master_id_fk"/>
    </changeSet>

</databaseChangeLog>